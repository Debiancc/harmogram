.playlist-panel
  background-color rgba(white, 0.2)
  li
    width 100%
    padding 1rem 2rem
    position relative
    h1, h2
      max-width 70%
    h1
      margin 0
      margin-bottom 1rem
      font-size 2rem
    h2
      font-size 1.6rem
    hr, br
      display none

    button
      position absolute
      right 5rem
      top 50%
      width 4rem
      box-shadow inset 0 0 0 1px rgba(black, 0.9)
      
      border-radius 50%
      margin-top: -2rem
      font-size 0
      padding 0
      &:before
        content ""
        width 0 
        height 0
        display:inline-block
        border 1rem solid transparent
        border-left: 1.5rem solid rgba(black, 0.7)
        position relative
        left 0.55rem

    border-bottom 1px solid rgba(black, 0.6)